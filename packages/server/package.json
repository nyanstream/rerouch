{
    "name": "@nyanstream/rerouch-server",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/nyanstream/rerouch.git",
        "directory": "packages/server"
    },
    "scripts": {
        "cleanup": "del-cli ./dist",
        "esbuild": "esbuild src/index.ts --bundle --external:fastify-swagger,saslprep --format=esm --platform=node --outfile=dist/index.js",
        "copy-static-dir": "ncp src/static/ dist/static",
        "copy-package-dist-json": "ncp package-dist.json dist/package.json",
        "build": "npm run cleanup && npm run esbuild && npm run copy-static-dir && npm run copy-package-dist-json",
        "run-server": "node --loader ts-node/esm ./src/index.ts",
        "start": "nodemon --exec \"npm run run-server\" -e ts,json"
    },
    "dependencies": {
        "cross-fetch": "3.1.4",
        "dotenv": "10.0.0",
        "fastify": "3.25.3",
        "fastify-auth": "1.1.0",
        "fastify-cookie": "5.5.0",
        "fastify-cors": "6.0.2",
        "fastify-helmet": "5.3.2",
        "fastify-static": "4.5.0",
        "fastify-swagger": "4.13.0",
        "mongodb": "4.2.2",
        "mongodb-client-encryption": "1.2.7"
    },
    "devDependencies": {
        "esbuild": "0.14.10",
        "nodemon": "2.0.15",
        "ts-node": "10.4.0",
        "typescript": "4.5.4"
    }
}
